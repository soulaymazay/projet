<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-55dp"
    android:background="@drawable/inter1"
    tools:context=".MainActivity_authentification">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="769dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="-3dp">

        <ImageView
            android:layout_width="574dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="22dp"
            android:padding="10dp"
            android:src="@drawable/logo3"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_1"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <EditText
                android:id="@+id/modele"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/per"
                android:drawablePadding="80dp"
                android:hint=" nom" />

            <EditText
                android:id="@+id/annee"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/eml"
                android:drawablePadding="80dp"
                android:hint=" E-mail" />

            <EditText
                android:id="@+id/marque"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/permis"
                android:drawablePadding="50dp"
                android:hint="numéro de permis" />

            <EditText
                android:id="@+id/mot1"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/mot"
                android:drawablePadding="50dp"
                android:hint=" mot de passe" />

            <EditText
                android:id="@+id/mot2"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/mot2"

                android:drawablePadding="50dp"
                android:hint="vérifier mot de passe" />

            <Button
                android:id="@+id/btn"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/border"

                android:text="choisir une photo de votre moyen de transport" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:srcCompat="@drawable/photo" />


            <Button
                android:id="@+id/button4"
                android:layout_width="183dp"
                android:layout_height="53dp"
                android:layout_marginLeft="90dp"

                android:layout_marginTop="20dp"
                android:background="@drawable/border"

                android:text="s'inscrir"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>