<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inter1"
    tools:context=".MainActivity_authentification">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="426dp"
        android:layout_height="737dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="-3dp">


        <ImageView
            android:layout_width="557dp"
            android:layout_height="86dp"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="22dp"
            android:padding="10dp"
            android:src="@drawable/logo3"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="379dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_1"

            android:orientation="vertical"
            tools:elevation="5dp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/T1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/per"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:drawablePadding="80dp"
                android:hint=" nom" />

            <EditText
                android:id="@+id/T2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/eml"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:drawablePadding="80dp"
                android:hint=" E-mail" />

            <EditText
                android:id="@+id/mp1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/mot"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:drawablePadding="50dp"
                android:hint=" mot de passe" />

            <EditText
                android:id="@+id/mp2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/mot2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:drawablePadding="50dp"
                android:hint="vÃ©rifier mot de passe" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textSize="24sp"
                android:id="@+id/tv"/>


            <Button
                android:id="@+id/button4"
                android:layout_width="181dp"
                android:layout_height="59dp"
                android:layout_marginLeft="90dp"

                android:background="@drawable/border"
                android:text="conecter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>