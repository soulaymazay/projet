<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_avis">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutTooBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/holo_orange_light"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/flshavis"
            android:layout_width="50dp"
            android:background="#FFBB33"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/fleshavis"
            app:tint="@color/black"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/imageapp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textavis"
            android:layout_width="276dp"
            android:layout_height="43dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="67dp"
            android:text="donner voter avis"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageapp"
            tools:ignore="NotSibling,UnknownId" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hintavis"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageapp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="238dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:textColorHint="#FCA300" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>