<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBB33"
    tools:context=".MainActivity_listdesmoyens">


    <LinearLayout
        android:layout_width="437dp"
        android:layout_height="855dp"
        android:layout_marginTop="-20dp"
        android:layout_weight="1"
        android:background="@drawable/b4"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-10dp"
            tools:layout_editor_absoluteY="137dp">

            <ImageView
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="100dp"
                android:padding="10dp"
                android:src="@drawable/logo3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="359dp"
                android:layout_height="260dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/delius_swash_caps"
                android:text=" Trouver un moyen de transport  facilement , rapidement et en toute sécurité."
                android:textColor="#ffffff"
                android:textSize="31dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="-60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-10dp"
            tools:layout_editor_absoluteY="137dp">


            <ImageView

                android:layout_width="249dp"
                android:layout_height="157dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="200dp"
                android:padding="10dp"
                android:src="@drawable/b3" />

            <ImageButton

                android:id="@+id/flesh"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="00dp"
                android:background="#FDA400"
                android:padding="10dp"
                android:src="@drawable/fleche" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>