<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#000000"

    android:orientation="vertical"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mt"
            android:layout_width="305dp"
            android:layout_height="292dp"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/mt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:id="@+id/lettre_t"
                android:layout_width="106dp"
                android:layout_height="550dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/t" />

            <ImageView
                android:id="@+id/lettre_a"
                android:layout_width="106dp"
                android:layout_height="550dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/voimot" />

            <ImageView
                android:id="@+id/lettre_d"
                android:layout_width="106dp"
                android:layout_height="550dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/d" />


            <ImageView
                android:id="@+id/lettre_e"
                android:layout_width="106dp"
                android:layout_height="550dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/e" />

            <ImageView
                android:id="@+id/lettre_l"
                android:layout_width="106dp"
                android:layout_height="550dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/l" />

            <ImageView
                android:id="@+id/lettre_i"
                android:layout_width="106dp"
                android:layout_height="550dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/i" />

        </LinearLayout>

        <TextView
            android:id="@+id/tran"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:enabled="false"
            android:fadeScrollbars="false"
            android:fontFamily="casual"
            android:text="Transport En Ligne"
            android:textColor="#b0c4de"
            android:textSize="20dp"
            app:emojiCompatEnabled="false" />

    </LinearLayout>


</LinearLayout>