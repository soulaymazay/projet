<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-55dp"
    android:background="@drawable/inter1"
    tools:context=".MainActivity_authentification">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="875dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="-3dp">

        <ImageView
            android:layout_width="574dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="22dp"
            android:padding="10dp"
            android:src="@drawable/logo3"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="528dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/infochauff"
                android:layout_width="373dp"
                android:layout_height="63dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shadw"
                android:drawableRight="@drawable/fleche1"
                android:drawablePadding="80dp"
                android:fontFamily="sans-serif-black"
                android:text="information de chauffeur"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textinfochauff" />

            <Button
                android:id="@+id/infomt"
                android:layout_width="373dp"
                android:layout_height="63dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shadw"
                android:drawableRight="@drawable/fleche1"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-black"
                android:text="information de moyen de transport"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textinfomt" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
